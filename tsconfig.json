{
  "compilerOptions": {
    "lib": ["es2015", "dom"],
    "module": "commonjs",
    "target": "es6",
    "outDir": "dist",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "esModuleInterop": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["lib/*"]
    }
  },
  "include": ["lib/**/*"]
}
